<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>iTalk</display-name>
  <description>Online twitter Sample Application</description>

  <filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.bird.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>GBK</param-value>
		</init-param>
  </filter>
  <filter-mapping>
	   <filter-name>EncodingFilter</filter-name>
	   <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
		<filter-name>AccessPurviewFilter</filter-name>
		<filter-class>com.bird.filter.AccessPurviewFilter</filter-class>
  </filter>
  <filter-mapping>
	   <filter-name>AccessPurviewFilter</filter-name>
	   <url-pattern>/frame/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>NewTalk</servlet-name>
    <servlet-class>com.bird.core.NewTalk</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewTalk</servlet-name>
    <url-pattern>/newTalk</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>checkUserName</servlet-name>
    <servlet-class>com.bird.core.CheckUserName</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>checkUserName</servlet-name>
    <url-pattern>/checkUserName</url-pattern>
  </servlet-mapping>  
  <servlet>
    <servlet-name>TalkRegister</servlet-name>
    <servlet-class>com.bird.core.TalkRegister</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TalkRegister</servlet-name>
    <url-pattern>/talkRegister</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TalkLogin</servlet-name>
    <servlet-class>com.bird.core.TalkLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TalkLogin</servlet-name>
    <url-pattern>/talkLogin</url-pattern>
  </servlet-mapping>  
  <servlet>
    <servlet-name>CheckUniqueEmail</servlet-name>
    <servlet-class>com.bird.core.CheckUniqueEmail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckUniqueEmail</servlet-name>
    <url-pattern>/checkUniqueEmail</url-pattern>
  </servlet-mapping>  

  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/italk</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>frame/iTalk.jsp</welcome-file>
  </welcome-file-list>
	
</web-app>
